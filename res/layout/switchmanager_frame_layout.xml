<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="43dip"
            android:layout_height="43dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_new_switch" />

        <TextView
            android:id="@+id/tag_list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_gravity="center_vertical"
            android:text="一个开关标记在触碰时在包含的两个任务之间切换。" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_switch_lay1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/nor_button_bg"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="12.0dip" >

        <TextView
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_margin="5.0dip"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="1"/>

        <TextView
            android:id="@+id/switch_tag_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="未设定事件"
            android:textColor="#ff666666"
            android:textSize="@dimen/default_title_indicator_text_size" />
    </LinearLayout>


     <LinearLayout
        android:id="@+id/add_switch_lay2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/nor_button_bg"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="12.0dip" >

        <TextView
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_margin="5.0dip"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="2"/>

        <TextView
            android:id="@+id/switch_tag_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="未设定事件"
            android:textColor="#ff666666"
            android:textSize="@dimen/default_title_indicator_text_size" />
    </LinearLayout>


</LinearLayout>