<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dip"
        android:orientation="vertical" >
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.0sp"
            android:textColor="@color/blue"
            android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
            android:text="姓名" />
        <ImageView 
            android:id="@+id/write_contact_find"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_category_social"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:background="@color/default_line_indicator_unselected_color" />

        <EditText
            android:id="@+id/write_contact_name"
            android:layout_width="fill_parent"
            android:inputType="textPersonName"
            android:layout_height="wrap_content"
            android:hint="张三" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.0sp"
            android:textColor="@color/blue"
            android:text="电话" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:background="@color/default_line_indicator_unselected_color" />

        <EditText
            android:id="@+id/write_contact_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="+86-13000000000" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/contact_write_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_bg"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:clickable="true"
        android:orientation="horizontal"
        android:minHeight="48dip"
        android:padding="12.0dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="写入标签"
            android:textColor="#ff666666"
            android:textSize="@dimen/default_title_indicator_text_size" />
    </LinearLayout>
</LinearLayout>